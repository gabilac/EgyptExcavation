@{ ViewBag.Header = "Burial Records"; }
@model BurialsViewModel


<div class="container">

    <div class="row">

        <div class="col-3 card nopacity shadow">
            <vc:filter />
        </div>

        <div class="col-9">

            @foreach (var b in Model.Burials)
            {
        <div class="card shadow p-1 my-3">

            <div class="row">

                <div class="col-6">
                    <h5>@b.BurialCompositeId</h5>
                </div>

                <div class="col-4">
                    <p><strong>Date Found:</strong>     @(b.DayFound == null ? 00 : b.DayFound) / @(b.MonthFound == null ? "—" : b.MonthFound) / @b.YearFound</p>
                </div>

                <!--Needs attention icon-->
                <div class="col-2" align="right" >
                    <img src="~/img/yellowflag.png" alt="Icon" width="20" />
                </div>

            </div>
            <hr />
            <div class="row">

                <div class="col-6" style="border-right: 1px solid #ccc">
                    <p><strong>Gender: </strong>@(b.BodyColGender == null ? "------" : b.BodyColGender)</p>
                    <p><strong>Age: </strong>@(b.EstimatedAge == null ? 0 : b.EstimatedAge)</p>
                    <p><strong>HairColor: </strong>@(b.HairColor == null ? "------" : b.HairColor)</p>
                    <p><strong>Depth: </strong>@(b.Depth == null ? 0 : b.Depth)</p>
                    <p><strong>Remains Length: </strong>@(b.LengthofRemains == null ? 0 : b.LengthofRemains)</p>
                    <p><strong>Head Direction: </strong>@(b.HeadDirection == null ? "------" : b.HeadDirection)</p>
                </div>

                <div class="col-4">
                    <p><strong>Hair Taken:</strong></p>
                    <p><strong>Soft Tissue Taken:</strong></p>
                    <p><strong>Bone Taken:</strong></p>
                    <p><strong>Tooth Taken:</strong></p>
                    <p><strong>Textile Taken:</strong></p>
                    <p><strong>Artifact Found:</strong></p>
                </div>

                <div class="col-2" align="right">
                    <p><img src="~/img/@(b.HairTaken == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                    <p><img src="~/img/@(b.SoftTissueTaken == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                    <p><img src="~/img/@(b.BoneTaken == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                    <p><img src="~/img/@(b.ToothTaken == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                    <p><img src="~/img/@(b.TextileTaken == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                    <p><img src="~/img/@(b.ArtifactFound == true ? "Check.png" : "X.png")" alt="Check or X icon" width="20" /></p>
                </div>

            </div>
            <hr />
            <div class="row">

                <div class="col-9" align="left">
                    <p><strong>Notes:</strong> @b.Notes</p>
                </div>

                <div class="col-3" align="right">
                    <form action="BurialRecord" method="post">
                        <input type="hidden" name="burialid" value="@b.BurialKey" />
                        <button type="submit" class="bttn-one p-1">Learn More</button>
                    </form>
                </div>

            </div>
        </div>            
        }

        <!--Pagination-->
        <div class="row" align="center">
            <div class="col-6" align="center" page-info="@Model.PagingInfo"></div>
        </div>

        </div>

    </div>

</div>